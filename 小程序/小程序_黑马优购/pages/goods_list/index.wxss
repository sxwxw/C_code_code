.first_tab .goods_item {
  display: flex;
  border-bottom: 3rpx solid #aaa;
}
.first_tab .goods_item .good_left_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .good_left_image image {
  width: 70%;
}
.first_tab .goods_item .good_right_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .good_right_info .goods_left_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .good_right_info .goods_left_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
